<Border
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="av" 
    x:Class="DDTV_GUI.WPFControl.ColorPickerWindow"
        CornerRadius="10"
        Width="250"
        Height="300"
        Background="{DynamicResource RegionBrush}">
    <hc:SimplePanel>
        <TextBlock HorizontalAlignment="Left" Margin="15,7,0,0" VerticalAlignment="Top" Text="设置对象："></TextBlock>
        <UniformGrid Margin="65,3,35,273" Columns="2">
            <RadioButton Name="DanMuRadio" Margin="0,0,0,0" BorderThickness="1" Content="弹幕" IsChecked="True"/>
            <RadioButton Name="SubtitleRadio" Margin="0,0,0,0" BorderThickness="1" Content="野生字幕"/>
        </UniformGrid>
        <hc:ColorPicker Name="ColorPicker" Margin="15,30,5,37"/>
        <Button Content="确定" Margin="0,268,0,0" Style="{StaticResource ButtonSuccess}" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
    </hc:SimplePanel>
</Border>
    
