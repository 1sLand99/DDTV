<Border
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="av" 
    x:Class="DDTV_GUI.WPFControl.AddRoomDialog"
        CornerRadius="10"
        Width="356"
        Height="190"
        Background="{DynamicResource RegionBrush}">
    <hc:SimplePanel>
        <Button Width="22" Height="22" Command="hc:ControlCommands.Close" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryBrush}" hc:IconElement.Geometry="{StaticResource ErrorGeometry}" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,4,0"/>
        <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="UID" Margin="0,28,0,0" VerticalAlignment="Top"/>
        <hc:TextBox x:Name="UIDInputBox"  ShowClearButton="True" hc:InfoElement.Placeholder="UID(也就是账号空间域名space.bilibili.com后面的数字)" Text="" Margin="20,70,20,0" Height="44" VerticalAlignment="Top"/>
        <Button Content="确定" Margin="0,138,0,0" Style="{StaticResource ButtonSuccess}" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
    </hc:SimplePanel>
</Border>